<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:contentPadding="16dp">
    <!--. “Custom ArrayAdapter with ListView in Android.” GeeksforGeeks, 25 Nov. 2020, www.geeksforgeeks.org/custom-arrayadapter-with-listview-in-android/. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete"
            android:src="@drawable/baseline_delete_24"
            />

        <TextView
            android:id="@+id/tvGoalCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: Bills"
            android:textColor="#424242"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvStartGoalDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date: 01 Jan 2025"
            android:textColor="#424242"
            android:textSize="16sp"
            android:layout_marginTop="2dp" />
        <TextView
            android:id="@+id/tvEndGoalDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date: 01 Jan 2025"
            android:textColor="#424242"
            android:textSize="16sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvMinMonthlyContribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min: R500"
            android:textColor="#424242"
            android:textSize="16sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvMaxMonthlyContribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max: R1000"
            android:textColor="#424242"
            android:textSize="16sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
