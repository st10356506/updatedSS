<?xml version="1.0" encoding="utf-8"?>
<!--GeeksforGeeks (2019b). How to build a simple Calculator app using Android
Studio? [online] GeeksforGeeks. Available at:
https://www.geeksforgeeks.org/how-to-build-a-simple-calculator-app-using-
android-studio/. (GeeksforGeeks, 2019b)-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFECE7">
    <!--
    Android Developers (n.d.). LinearLayout. [online] Available at: https://developer.android.com/reference/android/widget/LinearLayout [Accessed 7 Jun. 2025].
    -->

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← Back"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#EFECE7"
        android:textColor="#000000"/>
    <!--
    Android Developers (n.d.). Button. [online] Available at: https://developer.android.com/reference/android/widget/Button [Accessed 7 Jun. 2025].
    -->

    <!-- Display -->
    <TextView
        android:id="@+id/calculatorDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:padding="16dp"
        android:background="#EEEEEE"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />
    <!--
    Android Developers (n.d.). TextView. [online] Available at: https://developer.android.com/reference/android/widget/TextView [Accessed 7 Jun. 2025].
    -->

    <!-- Buttons Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">
        <!--
        Android Developers (n.d.). GridLayout. [online] Available at: https://developer.android.com/reference/android/widget/GridLayout [Accessed 7 Jun. 2025].
        -->

        <!-- Row 1 -->
        <Button android:id="@+id/btn7" android:text="7" style="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:layout_columnWeight="1"
            android:backgroundTint="#DDDDDD" android:textColor="#000000" android:textSize="18sp"/>
        <!-- Similar references apply to other buttons -->

        <Button android:id="@+id/btn8" android:text="8" style="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:layout_columnWeight="1"
            android:backgroundTint="#DDDDDD" android:textColor="#000000" android:textSize="18sp"/>

        <Button android:id="@+id/btn9" android:text="9" style="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:layout_columnWeight="1"
            android:backgroundTint="#DDDDDD" android:textColor="#000000" android:textSize="18sp"/>

        <Button android:id="@+id/btnDiv" android:text="/" style="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:layout_columnWeight="1"
            android:backgroundTint="@color/black" android:textColor="@color/white" android:textSize="18sp"/>

        <!-- Row 2 -->
        <Button android:id="@+id/btn4" android:text="4" style="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:layout_columnWeight="1"
            android:backgroundTint="#DDDDDD" android:textColor="#000000" android:textSize="18sp"/>

        <Button android:id="@+id/btn5" android:text="5" style="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:layout_columnWeight="1"
            android:backgroundTint="#DDDDDD" android:textColor="#000000" android:textSize="18sp"/>

        <Button android:id="@+id/btn6" android:text="6" style="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:layout_columnWeight="1"
            android:backgroundTint="#DDDDDD" android:textColor="#000000" android:textSize="18sp"/>

        <Button android:id="@+id/btnMul" android:text="*" style="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:layout_columnWeight="1"
            android:backgroundTint="@color/black" android:textColor="@color/white" android:textSize="18sp"/>

        <!-- Row 3 -->
        <Button android:id="@+id/btn1" android:text="1" style="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:layout_columnWeight="1"
            android:backgroundTint="#DDDDDD" android:textColor="#000000" android:textSize="18sp"/>

        <Button android:id="@+id/btn2" android:text="2" style="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:layout_columnWeight="1"
            android:backgroundTint="#DDDDDD" android:textColor="#000000" android:textSize="18sp"/>

        <Button android:id="@+id/btn3" android:text="3" style="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:layout_columnWeight="1"
            android:backgroundTint="#DDDDDD" android:textColor="#000000" android:textSize="18sp"/>

        <Button android:id="@+id/btnSub" android:text="-" style="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:layout_columnWeight="1"
            android:backgroundTint="@color/black" android:textColor="@color/white" android:textSize="18sp"/>

        <!-- Row 4 -->
        <Button android:id="@+id/btn0" android:text="0" style="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:layout_columnWeight="1"
            android:backgroundTint="#DDDDDD" android:textColor="#000000" android:textSize="18sp"/>

        <Button android:id="@+id/btnDot" android:text="." style="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:layout_columnWeight="1"
            android:backgroundTint="#DDDDDD" android:textColor="#000000" android:textSize="18sp"/>

        <Button android:id="@+id/btnClear" android:text="C" style="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:layout_columnWeight="1"
            android:backgroundTint="#458B74" android:textColor="#FFFFFF" android:textSize="18sp"/>

        <Button android:id="@+id/btnAdd" android:text="+" style="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_margin="4dp" android:layout_columnWeight="1"
            android:backgroundTint="@color/black" android:textColor="@color/white" android:textSize="18sp"/>

        <!-- Equals button (spans full row) -->
        <Button
            android:id="@+id/btnEquals"
            android:text="="
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/black"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_columnSpan="4" />
    </GridLayout>

</LinearLayout>
