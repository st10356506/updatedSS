<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutAllExpenses"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#EFECE7">

    <!-- Title for the expenses list -->
    <TextView
        android:id="@+id/tvExpensesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Expense Entries"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView to display dynamic list of expenses -->
    <!-- Based on layout and component practices from Android Developers -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAllExpenses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="8dp"/>

    <!-- Button to return to the previous screen -->
    <!-- Reference: A. Sharabiani (2018) and Android Developers Layout Editor Guide -->
    <Button
        android:id="@+id/btnBackExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/black"
        android:textColor="#ffffff"
        android:text="Back" />

</LinearLayout>
