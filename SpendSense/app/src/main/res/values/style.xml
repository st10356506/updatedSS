<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BlackTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#000000</item> <!-- Outline when active -->
        <item name="boxStrokeErrorColor">#000000</item>
        <item name="textFillColor">#000000</item>
        <item name="hintTextColor">#000000</item> <!-- Hint color -->
        <item name="android:textColorHint">#000000</item>
        <item name="cursorColor">#000000</item> <!-- Cursor color -->
        <item name="endIconTint">#000000</item> <!-- Eye icon color -->

    </style>

    <style name="CalendarWeekDayText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/forest_green</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarDateText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Button Style -->
    <style name="GreenButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/emerald_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- NavBar Colour -->
    <style name="NavColour" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">#C8D8C4</item>
    </style>

    <style name="SelectorColour" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:backgroundTint">#aff3a3</item>
    </style>

    <!--dropdown-->
    <style name="DropdownTextAppearance" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="DropdownPopupBackground">
        <item name="android:popupBackground">#FFFFFF</item>
    </style>




</resources>